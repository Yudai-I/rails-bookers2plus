<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <!--<meta name="viewport" content="width=device-width,initial-scale=1">-->
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    
    <script src="https://kit.fontawesome.com/a61de98c96.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-secondary list-unstyled">
      
      <li class="nav-item ml-3">
        <%= link_to "Bookers", root_path, class: 'nav-link text-white' %>
      </li>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNav4">
    <% if user_signed_in? %>
    <i class="fas fa-home"></i><li class="nav-item">
        <%= link_to "Home", user_path(current_user.id), class: 'nav-link text-white' %>
      </li>
    <i class="fas fa-users"></i><li class="nav-item">
        <%= link_to "Users", users_path, class: 'nav-link text-white' %>
      </li>
      <i class="fas fa-book-open"></i><li class="nav-item">
        <%= link_to "Books", books_path, class: 'nav-link text-white' %>
      </li>
      <i class="fas fa-sign-out-alt"></i><li class="nav-item">
        <%= link_to "logout", destroy_user_session_path, method: :delete, class: 'nav-link text-white' %>
      </li>
    <% else %>
    <i class="fas fa-home"></i></i><li class="nav-item">
        <%= link_to "Home", root_path, class: 'nav-link text-white' %>
      </li>
      <i class="fas fa-link"></i><li class="nav-item">
        <%= link_to "About", '/home/about', class: 'nav-link text-white' %>
      </li>
      <i class="fas fa-user-plus"></i><li class="nav-item">
        <%= link_to "sign up", new_user_registration_path, class: 'nav-link text-white' %>
      </li>
      <i class="fas fa-sign-in-alt"></i><li class="nav-item">
        <%= link_to "login", new_user_session_path, class: 'nav-link text-white' %>
      </li>
 
    <% end %>
       </div>
    </nav>
  </header>
  
    <%= yield %>
    <footer>
   <div class="d-flex justify-content-center mt-5">CopyRight Infratop.inc</div>
  </footer>
  </body>
</html>
